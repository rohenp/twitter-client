<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:contentDescription="@string/profile_content"
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="5dp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_alignTop="@+id/ivProfileImage"
        android:textStyle="bold"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvUsername"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_below="@+id/tvName"
        android:textColor="#8D9EAA"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingLeft="10dp"
        android:layout_width="50dp"
        android:gravity="end"
        android:layout_height="wrap_content"
        android:id="@+id/tvCharacterCount"
        android:text="@string/char_count"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/tvName"
        android:layout_toEndOf="@+id/tvName"
        android:layout_alignBottom="@+id/btTweet"
        android:textColor="#8D9EAA" />

    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:id="@+id/btTweet"
        android:textAllCaps="false"
        android:text="@string/tweet"
        android:layout_marginLeft="10dp"
        android:background="#55ACEE"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/tvCharacterCount"
        android:layout_toEndOf="@+id/tvCharacterCount"
        android:layout_alignBottom="@+id/tvUsername" />

    <EditText
        android:layout_below="@+id/ivProfileImage"
        android:id="@+id/etBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:maxLines="5"
        android:background="#FFFFFF"/>

</RelativeLayout><!-- From: file:/Users/rohen/Code/twitter_client/app/src/main/res/layout/fragment_compose.xml -->