<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="0dp"
        android:paddingEnd="5dp"
        android:id="@+id/ivProfileImage"
        android:layout_below="@+id/tvRetweeter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF"/>

    <ImageView
        android:contentDescription="Retweet Image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_retweet"
        android:scaleType="fitCenter"
        android:layout_marginTop="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#8D9EAA"
        android:id="@+id/ivRetweetTop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:textSize="10sp"
        android:text="Retweeter"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#8D9EAA"
        android:id="@+id/tvRetweeter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:paddingLeft="0dp"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_alignTop="@+id/ivProfileImage"
        android:text="Name"
        android:textStyle="bold"
        android:background="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUsername"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/tvName"
        android:layout_toEndOf="@+id/tvName"
        android:layout_alignBottom="@+id/tvName"
        android:text="Username"
        android:textColor="#8D9EAA"
        android:paddingBottom="1dp"
        android:background="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvBody"
        android:layout_below="@+id/tvName"
        android:layout_toRightOf="@id/ivProfileImage"
        android:layout_toEndOf="@id/ivProfileImage"
        android:text="Body"
        android:layout_marginBottom="5dp"
        android:background="#FFFFFF"
        android:autoLink="web"
        android:linksClickable="true"/>

    <ImageView
        android:contentDescription="Retweet"
        android:src="@drawable/ic_retweet"
        android:paddingTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBody"
        android:id="@+id/ivRetweet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRetweets"
        android:paddingBottom="7dp"
        android:textColor="#8D9EAA"
        android:layout_alignBottom="@+id/ivRetweet"
        android:layout_toRightOf="@+id/ivRetweet"
        android:layout_toEndOf="@+id/ivRetweet" />

    <ImageView
        android:contentDescription="Favorite"
        android:paddingTop="5dp"
        android:src="@drawable/ic_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBody"
        android:id="@+id/ivFavorite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="300dp"
        android:layout_marginStart="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFavorites"
        android:paddingBottom="5dp"
        android:textColor="#8D9EAA"
        android:layout_alignBottom="@+id/ivFavorite"
        android:layout_toRightOf="@+id/ivFavorite"
        android:layout_toEndOf="@+id/ivFavorite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivProfileImage"
        android:id="@+id/tvTime"
        android:textColor="#8D9EAA"
        android:text="6m"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>